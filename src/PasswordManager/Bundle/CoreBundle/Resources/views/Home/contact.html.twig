{% extends "PasswordManagerCoreBundle::layout.html.twig" %}

{% block passwordmanager_platform_body_index %}
    <div id="list-server"  class="py-5 gradient-overlay bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="py-5 col-md-12">
                    <div class="row">
                        <div class="text-center col-4"><i class="d-block mx-auto fa fa-5x fa fa-envelope-o"></i></div>
                        <div class="col-8">
                            <h5 class="mb-3"><b>Formulaire de contact</b></h5>
                            <p class="my-1">Merci d'utiliser le formulaire de contact pour contact le support</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<h2 id="list-mdp-title" >Formulaire de contact</h2>
<img id="logo-add-pass" src= "{{ absolute_url(asset('img/speech-bubble.png')) }}">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div class="well" id="form-add-contact">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {# Les erreurs générales du formulaire. #}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.subject, "Sujet de votre demande") }}
                        {{ form_widget(form.subject, {'attr': {'pattern': '.*'}}) }}
                        {{ form_errors(form.subject) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.body, "Contenu de votre message") }}
                        {{ form_errors(form.body) }}
                        {{ form_widget(form.body, {'attr': {'pattern': '.*'}}) }}
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
    {% endblock %}