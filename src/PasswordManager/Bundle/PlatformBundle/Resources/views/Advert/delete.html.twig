{% extends "PasswordManagerPlatformBundle::layout.html.twig" %}

{% block title %}
  Supprimer un mot de passe | {{ parent() }}
{% endblock %}
 {% block body %}
     {{ parent() }}
 {% endblock %}
{% block passwordmanager_platform_body_index %}
    <div id="list-server" class="py-5 gradient-overlay bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="py-5 col-md-12">
                    <div class="row">
                        <div class="text-center col-4"><i class="d-block mx-auto fa fa-5x fa-trash-o"></i></div>
                        <div class="col-8">
                            <h5 class="mb-3"><b>Suppression </b></h5>
                            <p class="my-1">Catégorie :{% for category in advert.categories %}
                                                {{ category.name }}
                                                {% if not loop.last %},
                                                {% endif %}
                                            {% endfor %} </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h2 id="list-mdp-title" ><i class="fa-2x fa fa-eraser"></i>  Supprimer le mot de passe</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="text-delete-pass">
                <p>
                 Etes-vous certain de vouloir supprimer le mot de passe <b>"{{ advert.title }}" </b>?
                    <br/><br/>
                </p >
                {% if advert.shared == true %}
                    <p style="color:#d9534f;margin-bottom: 25px;"><b>
                            <i class="fa-3x fa fa-exclamation-triangle"></i> Ce mot de passe est en cours de partage.
                        </b></p>
                {% endif %}


                <form action="{{ path('password_manager_platform_delete', {'id': advert.id}) }}" method="post">
                    <a href="{{ path('password_manager_platform_view', {'id': advert.id}) }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Retour au mot de passe
                     </a>
                    {# Ici j'ai écrit le bouton de soumission à la main #}
                 <input type="submit" value="Supprimer" class="btn btn-danger" />
                    {# Ceci va générer le champ CSRF #}
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
</div>


{% endblock %} 