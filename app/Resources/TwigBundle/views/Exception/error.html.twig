{% extends "PasswordManagerCoreBundle::layout.html.twig" %}

{% block title %}
    Erreur | {{ parent() }}
{% endblock %}
 {% block body %}
     {{ parent() }}

 {% endblock %}

{% block passwordmanager_platform_body_index %}
    <div class="py-5 text-center opaque-overlay" id="bg-index-error-content" >
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12 text-white">
                    <h1 class="display-3 mb-4 error title">Gestionnaire de mots de passe</h1>
                    <p class="lead mb-5 error text">un outil dédié pour vos besoins  de stockage de mot de passe</p>
                    {% if   listAdverts is defined   %}
                        {% if  listAdverts  %}
                            <a class="btn btn-lg btn-dark mx-1 text-white "  href="{{ path('password_manager_platform_home')}}">Consulter ma liste de mot de passe</a>
                        {% endif %}
                    {% endif %}
                    <a class="btn btn-lg btn-secondary mx-1"  href="{{ path('password_manager_platform_add') }}">Ajouter un mot de passe à ma liste</a>
                    <h2 class="display-3 mb-4 error title" >{{- exception.message|nl2br|format_file_from_text -}}</h2>


                </div>
            </div>
        </div>
    </div>
{% endblock %}